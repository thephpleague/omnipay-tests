{
    "name": "omnipay/tests",
    "type": "library",
    "description": "Testing components for Omnipay payment processing library",
    "keywords": [
        "gateway",
        "merchant",
        "omnipay",
        "pay",
        "payment",
        "purchase"
    ],
    "homepage": "https://github.com/thephpleague/omnipay-tests",
    "license": "MIT",
    "authors": [
        {
            "name": "Adrian Macneil",
            "email": "adrian@adrianmacneil.com"
        },
        {
            "name": "Omnipay Contributors",
            "homepage": "https://github.com/thephpleague/omnipay-tests/contributors"
        }
    ],
    "autoload": {
        "psr-0": { "Omnipay\\Tests\\" : "src/" }
    },
    "require": {
        "php-http/mock-client": "^1",
        "php-http/guzzle6-adapter": "^1.1",
        "mockery/mockery": "^0.9",
        "phpunit/phpunit": "^5.7.0"
    },
    "require-dev": {
        "omnipay/common": "^3",
        "symfony/http-foundation": "^3"
    },
    "extra": {
        "branch-alias": {
